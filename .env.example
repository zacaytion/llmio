# Container environment (used by compose.yml)
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=loomio_development

# PgAdmin container
PGADMIN_DEFAULT_EMAIL=admin@local.dev
PGADMIN_DEFAULT_PASSWORD=admin

# Go application environment (LOOMIO_ prefix for Viper)
LOOMIO_DATABASE_USER=postgres
LOOMIO_DATABASE_PASSWORD=postgres
LOOMIO_DATABASE_NAME=loomio_development
LOOMIO_DATABASE_HOST=localhost
LOOMIO_DATABASE_PORT=5432
LOOMIO_DATABASE_SSLMODE=disable

# Server configuration
LOOMIO_SERVER_PORT=8081
