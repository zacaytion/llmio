{
  "name": "OutcomesController",
  "source_file": "app/controllers/api/v1/outcomes_controller.rb",
  "namespace": "Api::V1",
  "base_path": "/api/v1/outcomes",
  "inherits": "RestfulController",
  "permitted_params_key": "outcome",
  "description": "Poll outcomes/decisions",
  "actions": {
    "create": {
      "method": "POST",
      "path": "/api/v1/outcomes",
      "description": "Create a poll outcome (decision/result)",
      "authentication": "required",
      "authorization": "create on Outcome (via poll)",
      "root_key": "outcome",
      "parameters": { "$ref": "../permitted_params.json#/attributes/outcome" }
    },
    "update": {
      "method": "PATCH",
      "path": "/api/v1/outcomes/:id",
      "description": "Update a poll outcome",
      "authentication": "required",
      "authorization": "update on Outcome",
      "root_key": "outcome",
      "path_parameters": {
        "id": { "type": "integer" }
      },
      "parameters": { "$ref": "../permitted_params.json#/attributes/outcome" }
    }
  }
}
