{
  "name": "TagsController",
  "source_file": "app/controllers/api/v1/tags_controller.rb",
  "namespace": "Api::V1",
  "base_path": "/api/v1/tags",
  "inherits": "RestfulController",
  "permitted_params_key": "tag",
  "description": "Tag management for groups",
  "actions": {
    "create": {
      "method": "POST",
      "path": "/api/v1/tags",
      "description": "Create a new tag",
      "authentication": "required",
      "authorization": "update on Group",
      "root_key": "tag",
      "parameters": { "$ref": "../permitted_params.json#/attributes/tag" }
    },
    "update": {
      "method": "PATCH",
      "path": "/api/v1/tags/:id",
      "description": "Update a tag",
      "authentication": "required",
      "authorization": "update on Group",
      "root_key": "tag",
      "path_parameters": {
        "id": { "type": "integer" }
      },
      "parameters": { "$ref": "../permitted_params.json#/attributes/tag" }
    },
    "destroy": {
      "method": "DELETE",
      "path": "/api/v1/tags/:id",
      "description": "Delete a tag",
      "authentication": "required",
      "authorization": "update on Group",
      "path_parameters": {
        "id": { "type": "integer" }
      }
    },
    "priority": {
      "method": "POST",
      "path": "/api/v1/tags/priority",
      "description": "Reorder tags by priority",
      "authentication": "required",
      "authorization": "update on Group",
      "parameters": {
        "group_id": { "type": "integer", "required": true },
        "ids": { "type": "array", "items": { "type": "integer" }, "description": "Tag IDs in priority order", "required": true }
      }
    }
  }
}
