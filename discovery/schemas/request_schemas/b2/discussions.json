{
  "name": "DiscussionsController",
  "source_file": "app/controllers/api/b2/discussions_controller.rb",
  "namespace": "Api::B2",
  "base_path": "/api/b2/discussions",
  "inherits": "BaseController",
  "authentication": "api_key",
  "description": "Bot API for creating discussions",
  "actions": {
    "show": {
      "method": "GET",
      "path": "/api/b2/discussions/:id",
      "description": "Get a discussion by ID or key",
      "path_parameters": {
        "id": { "type": "string" }
      },
      "query_parameters": {
        "api_key": { "type": "string", "required": true }
      }
    },
    "create": {
      "method": "POST",
      "path": "/api/b2/discussions",
      "description": "Create a new discussion",
      "parameters": {
        "api_key": { "type": "string", "required": true },
        "title": { "type": "string", "required": true },
        "description": { "type": "string" },
        "description_format": { "type": "string", "enum": ["html", "md"] },
        "group_id": { "type": "integer", "required": true },
        "private": { "type": "boolean" },
        "notify_recipients": { "type": "boolean" },
        "recipient_audience": { "type": "string" },
        "recipient_message": { "type": "string" },
        "recipient_user_ids": { "type": "array", "items": { "type": "integer" } },
        "recipient_emails": { "type": "array", "items": { "type": "string" } }
      },
      "notes": "Parameters can be sent as query params or in body. API key required."
    }
  },
  "authentication_notes": "Requires api_key parameter. User must have API key set in profile. No rate limiting."
}
