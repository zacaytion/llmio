{
  "name": "PollTemplateSerializer",
  "source_file": "app/serializers/poll_template_serializer.rb",
  "inherits_from": "ActiveModel::Serializer",
  "root_key": "poll_templates",
  "sideloaded_as": "poll_templates",
  "description": "Reusable poll template configuration",
  "attributes": {
    "id": { "type": "integer", "source": "column" },
    "key": { "type": "string", "source": "column" },
    "group_id": { "type": "integer", "source": "column", "nullable": true },
    "position": { "type": "integer", "source": "column", "nullable": true },
    "author_id": { "type": "integer", "source": "column", "nullable": true },
    "poll_type": { "type": "string", "source": "column" },
    "process_name": { "type": "string", "source": "column", "nullable": true },
    "process_subtitle": { "type": "string", "source": "column", "nullable": true },
    "process_introduction": { "type": "string", "source": "column", "nullable": true },
    "process_introduction_format": { "type": "string", "source": "column", "enum": ["md", "html"] },
    "tags": { "type": "array", "source": "column", "items": "string" },
    "title": { "type": "string", "source": "column", "nullable": true },
    "title_placeholder": { "type": "string", "source": "column", "nullable": true },
    "details": { "type": "string", "source": "column", "nullable": true },
    "details_format": { "type": "string", "source": "column", "enum": ["md", "html"] },
    "anonymous": { "type": "boolean", "source": "column" },
    "specified_voters_only": { "type": "boolean", "source": "column" },
    "notify_on_closing_soon": { "type": "string", "source": "column" },
    "content_locale": { "type": "string", "source": "column", "nullable": true },
    "shuffle_options": { "type": "boolean", "source": "column" },
    "show_none_of_the_above": { "type": "boolean", "source": "column" },
    "hide_results": { "type": "string", "source": "column", "enum": ["off", "until_vote", "until_closed"] },
    "chart_type": { "type": "string", "source": "column", "nullable": true },
    "min_score": { "type": "integer", "source": "column", "nullable": true },
    "max_score": { "type": "integer", "source": "column", "nullable": true },
    "minimum_stance_choices": { "type": "integer", "source": "column", "nullable": true },
    "maximum_stance_choices": { "type": "integer", "source": "column", "nullable": true },
    "dots_per_person": { "type": "integer", "source": "column", "nullable": true },
    "reason_prompt": { "type": "string", "source": "column", "nullable": true },
    "poll_options": { "type": "array", "source": "column", "items": "poll_option_config" },
    "poll_option_name_format": { "type": "string", "source": "column", "nullable": true },
    "stance_reason_required": { "type": "string", "source": "column", "enum": ["disabled", "optional", "required"] },
    "limit_reason_length": { "type": "integer", "source": "column", "nullable": true },
    "default_duration_in_days": { "type": "integer", "source": "column", "nullable": true },
    "agree_target": { "type": "integer", "source": "column", "nullable": true },
    "created_at": { "type": "datetime", "source": "column" },
    "updated_at": { "type": "datetime", "source": "column" },
    "discarded_at": { "type": "datetime", "source": "column", "nullable": true },
    "outcome_statement": { "type": "string", "source": "column", "nullable": true },
    "outcome_statement_format": { "type": "string", "source": "column", "nullable": true, "enum": ["md", "html"] },
    "outcome_review_due_in_days": { "type": "integer", "source": "column", "nullable": true },
    "quorum_pct": { "type": "integer", "source": "column", "nullable": true }
  },
  "relationships": {
    "group": { "serializer": "GroupSerializer", "type": "has_one", "root": "groups" }
  }
}
